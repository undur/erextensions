HasDirectAction: ERXNonNullConditional {
	condition = ^directActionName;
}

HasNoDirectAction: ERXNonNullConditional {
	condition = ^directActionName;
	negate = true;
}

UseForm: WOConditional {
        condition=showForm;
        negate = false;
}

DontUseForm: WOConditional {
        condition = showForm;
        negate = true;
}

